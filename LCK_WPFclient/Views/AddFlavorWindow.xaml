<Window x:Class="LCK_WPFclient.Views.AddFlavorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddFlavorWindow" Height="120" Width="237">
    <Grid>
        <ComboBox Name="cboFlavors" Height="27" Margin="10,10,10,0" VerticalAlignment="Top" SelectionChanged="cboFlavors_SelectionChanged"/>
        <Button Content="Add" Click="btnAdd" HorizontalAlignment="Left" Height="27" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="95"/>
        <Button Content="Cancel" Click="btnCancel" HorizontalAlignment="Right" Height="27" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="95"/>

    </Grid>
</Window>
